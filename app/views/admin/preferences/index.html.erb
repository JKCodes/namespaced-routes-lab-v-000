<h1>Preferences</h1>

<%= form_for @preference, url:admin_preference_path(@preference) do |f| %>
  <p>
    <%= f.label :song_sort_order %><br>
    Ascending: <%= f.radio_button :song_sort_order, "ASC" %>
    Descending: <%= f.radio_button :song_sort_order, "DESC" %>
  </p>

  <p>
    <%= f.label :artist_sort_order %><br>
    Ascending: <%= f.radio_button :artist_sort_order, "ASC" %>
    Descending: <%= f.radio_button :artist_sort_order, "DESC" %>
  </p>

  <p>
    <%= f.label :allow_create_artists %><br>
    Yes: <%= f.radio_button :allow_create_artists, true %>
    No: <%= f.radio_button :allow_create_artists, false %>
  </p>

  <p>
    <%= f.label :allow_create_songs %><br>
    Yes: <%= f.radio_button :allow_create_songs, true %>
    No: <%= f.radio_button :allow_create_songs, false %>
  </p>

  <%= f.submit %>
<% end %>
